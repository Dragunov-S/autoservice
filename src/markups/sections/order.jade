.order__container#order  
  .wrapper.main__wrapper
    .order__headline
      +headline('Заявка на ремонт и обслуживание в')
      .order__headline-select-block 
        span.dropdown-city
          input(type="radio" name="city" value="1" checked id="togliatty")
          label(for="togliatty") Тольятти
          input(type="radio" name="city" value="2" id="syzran")
          label(for="syzran") Сызрани
    form(action="#" name="order").order__form
      .order__form-item
        label(for="fio").order__label.order__label--required Представьтесь, пожалуйста
        input(type="text" id="fio" name="fio" required placeholder="Иванов Иван Иванович").order__input
      .order__form-item
        label(for="phone-number").order__label.order__label--required Телефон
        input(type="text" id="phone-number" name="phone-number" required placeholder="8 927 1234567").order__input
      .order__form-item
        label(for="email").order__label E-mail
        input(type="text" id="email" name="email" placeholder="example@mail.ru").order__input
      .order__form-item
        label(for="brand").order__label Марка автомобиля
        input(type="text" id="brand" name="brand" placeholder="Honda Civic").order__input
      .order__form-item
        label(for="service").order__label Вид сервиса
        .order__select-block
          span.dropdown-el
            input(type="radio" name="service" value="1" checked id="cooling")
            label(for="cooling") Система охлаждения
            input(type="radio" name="service" value="2" id="techservice")
            label(for="techservice") Техническое обслуживание
            input(type="radio" name="service" value="3" id="tyres")
            label(for="tyres") Шиномонтажные работы
      .order__form-item
        label(for="date").order__label Удобная дата и время обслуживания
        input(type="text" id="date" name="date" placeholder="22.05.18 в 18:00").order__input
      .order__form-textarea
        label(for="suggestion").order__label Дополнительные пожелания
        textarea(id="suggestion" name="suggestion" placeholder="Напишите дополнительные пожелания по обслуживанию").order__textarea
      .order__form-checkbox
        input(type="checkbox" id="agree" value="1" name="agree" checked).order__checkbox
        label(for="agree").order__checkbox-label Согласен на обработку персональных данных
    .empty__block
    +registration('#order')